<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.myapp.db.UploadVideoRoom">

    <ImageButton
        android:id="@+id/videoUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/vedioupload"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:contentDescription="Upload Video Button" />


    <Button
        android:id="@+id/chooseVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="5dp"
        android:text="Upload_Video"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoUploadButton" />



</LinearLayout>