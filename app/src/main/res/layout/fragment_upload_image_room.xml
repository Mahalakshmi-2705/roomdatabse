<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.myapp.db.UploadImageRoom">

    <ImageButton
        android:id="@+id/imageUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/uploadimg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:contentDescription="Upload Image Button" />
    <Button
        android:id="@+id/chooseImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="5dp"
        android:text="Upload Image"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageUploadButton" />




</LinearLayout>